            <div class="form-group">
                <div class="col-md-10">
                    <p>Select you new DB here:</p>
                    <input type="file" name="files"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload"/>
                </div>
            </div>
