<!-- Discovery -->
<div class="row border pb-1">
    <div class="col-12 headerCol">Discovery</div>
    <!-- Discovery time -->
    <div class="col-12 col-md-6 col-xl-3 form-group">
        <label class="form-label">Discovery Time</label>
        <input class="form-control" data-object="SystemData" data-property="discoveryTimeout" type="number" min="1" max="60" step="1"/>
        <div class="form-text">Amount of time (in seconds) to allow for discovery.</div>
    </div>

    <!-- Auto discovery frequency time -->
    <div class="col-12 col-md-6 col-xl-3 form-group">
        <label class="form-label">Discovery Interval</label>
        <input class="form-control" data-object="SystemData" data-property="autoDiscoveryFrequency" type="number" min="1" max="60" step="1"/>
        <div class="form-text">Interval (in minutes) in which Auto Discovery is run.</div>
    </div>

    <div class="col-12 col-md-6 col-xl-3 form-group">
        <!--75, 110, 300, 1200, 2400, 4800, 9600, 19200, 38400, 57600 and 115200 bit/s.-->
        <label class="form-label">Serial Port Speed</label>
        <select name="BaudRate" id="BaudRate" data-object="SystemData" data-property="baudRate" class="systemSetting form-control">
            <option value="75">75</option>
            <option value="110">110</option>
            <option value="300">300</option>
            <option value="1200">1200</option>
            <option value="2400">2400</option>
            <option value="4800">4800</option>
            <option value="9600">9600</option>
            <option value="19200">19200</option>
            <option value="38400">38400</option>
            <option value="57600">57600</option>
            <option value="115200">115200</option>
        </select>
        <div class="form-text">Serial Port speed for Adalight discovery.</div>
    </div>
